apiVersion: argoproj.io/v1alpha1
kind: ApplicationSet
metadata:
  name: projects
  namespace: argocd
spec:
  generators:
    - git:
        directories:
          - path: core/*
        repoURL: {{ git_repo }}
        revision: main
  template:
    metadata:
      name: 'core-{% raw %}{{path.basename}}{% endraw %}'
    spec:
      destination:
        server: https://kubernetes.default.svc
      project: default
      source:
        path: '{% raw %}{{path}}{% endraw %}'
        plugin:
          name: kustomize-enable-helm
        repoURL: {{ git_repo }}
        targetRevision: main
      syncPolicy:
        automated:
          prune: true
          selfHeal: true
        retry:
          backoff:
            duration: 15s
            factor: 2
            maxDuration: 5m
          limit: 15
